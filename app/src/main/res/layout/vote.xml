<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.code.yeoulcom_sns.MainActivity">

    <!-- 상단 ui 만들기-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- header 노란 배경 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:background="@drawable/profile" />

        <!-- 로고, 알림 알려주는 Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Yeoulcom"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text=" 회원님,\n 오늘 2건의 알림이\n 있습니다."
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <!-- 속성 버튼 -->
            <Button
                android:id="@+id/about_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginBottom="7dp"
                android:background="@drawable/plusbtn" />

            <Button
                android:id="@+id/about_btn2"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="문의하기"
                android:visibility="gone" />

            <Button
                android:id="@+id/about_btn3"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="내 정보"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_write_vote"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="25dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="투표 작성"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>

    <!-- 카테고리 ui 만들기 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:background="@drawable/edge">

        <!-- 카테고리 nav바 -->
        <Button
            android:id="@+id/postBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="게시물"
            android:textSize="35px"
            android:background="#00ff0000" />

        <Button
            android:id="@+id/conferenceBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:textSize="35px"
            android:background="#00ff0000"
            android:text="컨퍼런스" />

        <Button
            android:id="@+id/voteBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="20dp"
            android:textSize="35px"
            android:background="#00ff0000"
            android:textColor="#005566"
            android:text="투표"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Chairman_Btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="20dp"
            android:textSize="35px"
            android:background="#00ff0000"
            android:text="회장페이지" />

        <!-- 현재 선택되있는 nav바에 밑줄 -->
        <View
            android:layout_width="50dp"
            android:layout_height="0.8dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="190dp"
            android:background="#4682B4" />

        <!-- 게시물(main) Design -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 1 번째 게시물-->
            <LinearLayout
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/line"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="85dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="합/불 (12TH 최지민)"
                    android:textColor="#3d484e"
                    android:layout_marginTop="10dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1학년1반 OOO 합격시킬까요?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <!-- 투표 버튼 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp">

                <Button
                    android:layout_width="70dp"
                    android:id="@+id/yes_btn"
                    android:layout_height="70dp"
                    android:background="#80FF00"
                    android:layout_marginRight="50dp"
                    android:text="찬성하기" />

                <Button
                    android:layout_width="70dp"
                    android:id="@+id/no_btn"
                    android:layout_height="70dp"
                    android:background="#ff0000"
                    android:layout_marginLeft="50px"
                    android:textColor="@color/white"
                    android:text="반대하기" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <!-- 부가 설명 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/get_vote_yes"
                        android:text="0"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:text="찬성득표"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/get_vote_no"
                        android:text="0"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:text="반대득표"/>

                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <!-- 2 번째 게시물-->
            <LinearLayout
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:background="@drawable/line"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="합/불 (12TH 최지민)"
                    android:textColor="#3d484e" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1학년1반 OOO 합격시킬까요?"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- 투표 버튼 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="50dp"
                        android:background="#80FF00"
                        android:text="찬성하기" />

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="50px"
                        android:background="#ff0000"
                        android:text="반대하기"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- 부가 설명 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:text="    5명\n참가자 수"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="    3명\n찬성 득표"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    2명\n반대 득표"
                        android:textSize="13dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>