<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.code.yeoulcom_sns.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 상단 ui 만들기-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- header 노란 배경 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:background="@drawable/profile" />

                <!-- 로고, 알림 알려주는 Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Yeoulcom"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"
                    android:text=" 반갑습니다.\n 이곳은 Yeoulcom SNS \n 입니다."
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <!-- 속성 버튼 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/about_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@drawable/plusbtn" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/about_btn3"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="개발자 이메일"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/about_btn2"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="문의하기"
                        android:visibility="gone" />
                </LinearLayout>

            </FrameLayout>
            <!-- 카테고리 ui 만들기 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20dp"
                android:background="@drawable/edge">
                <!-- 카테고리 nav바 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/postBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#00ff0000"
                    android:text="게시물"
                    android:fontFamily="@font/nanumgothicbold"
                    android:textSize="35px" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/conferenceBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="20dp"
                    android:background="#00ff0000"
                    android:text="달력"
                    android:fontFamily="@font/nanumgothicbold"
                    android:textSize="35px"
                    android:textColor="#005566"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/voteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="20dp"
                    android:background="#00ff0000"
                    android:text="투표"
                    android:fontFamily="@font/nanumgothicbold"
                    android:textSize="35px" />
                <!--권한 있는 사람만 볼 수 있음-->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Chairman_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:textSize="35px"
                    android:fontFamily="@font/nanumgothicbold"
                    android:background="#00ff0000"
                    android:text="회장페이지" />

                <!-- 현재 선택되있는 nav바에 밑줄 -->
                <View
                    android:layout_width="50dp"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="60dp"
                    android:background="#4682B4" />

                    <!-- 달력 -->
                    <CalendarView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"/>


            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>